{% extends 'layout.html.twig' %}
{% block content %}

<div class="content">
    {% for item in errors %}
        <div class="alert alert-danger">
            {{ item }}
        </div>
    {% endfor %}
    <form action="/search" method="post">
        <div class="form-group">
            <label for="title">Symbol</label>
            <select class="form-control" name="symbol" required>
                {% for item in symbol %}
                    <option value="{{ item.Symbol }}">{{ attribute(item, 'Company Name')  }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="dateStart">dateStart</label>
            <input type="text" class="form-control" data-date-format='yyyy-mm-dd' name="dateStart" id="dateStart" aria-describedby="dateStartHelp" placeholder="dateStart" required>
        </div>
        <div class="form-group">
            <label for="dateEnd">dateEnd</label>
            <input type="text" class="form-control" data-date-format='yyyy-mm-dd' name="dateEnd" id="dateEnd" aria-describedby="dateEndHelp" placeholder="dateEnd" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="email" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{% endblock %}

